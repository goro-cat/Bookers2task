<table class= 'table table-hover table-inverse'>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td><%= attachment_image_tag(book_comment.user, :profile_image,format: 'jpeg', fallback: "no-image-icon.jpg", size: "50x50" ) %>
          <%= book_comment.user.name %>
      </td>
      <td><%= book_comment.comment %>
      </td>
      <% if book_comment.user == current_user %>
      <td class="comment-delete"><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger book_book_comment_#{book_comment.id}" %>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>