<div class="container">
  <div class="row">
    <% if params[:model] == "User" %>
      <h2>Users search for"<%= @keyword %>"</h2>
      <%= render 'users/index', users: @posts %>
    <% else %>
      <h2>Books search for"<%= @keyword %>"</h2>
      <%#= render 'books/index', books: @posts %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %>
                <%= attachment_image_tag(book.user, :profile_image, format: 'jpeg', fallback: "no-image-icon.jpg", size: "50x50") %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>